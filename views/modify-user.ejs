<% include partials/header %>

<% include partials/admin-navigation %>

    <div class='admin-main'>

        <div class = "container">
            <% include partials/_messages%>

            <form action="/admin/user/<%=User._id%>/modify" method="post" class="modify-user-form responsive-form">
                
                <div class="form-group">
                    <label for="name">Name</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="text" name="name" id="name" class="form-control input-lg" placeholder="Enter New Name" value = "<%= User.name%>" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="phone-number">Phone Number</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-mobile"></i></span>
                        <input type="text" name="phone-number" id="phone-number" class="form-control input-lg" minlength="1" maxlength="10" placeholder="Enter New Phone Number" value = "<%= User.phoneNumber%>" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                        <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Enter New Email"  value = "<%= User.username%>" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="new-password">New Password</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input type="password" name="new-password" id="new-password" minlength="6" maxlength="32" class="form-control input-lg" placeholder="Enter New Password">
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirm-password">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input type="password" name="confirm-password" id="confirm-password" minlength="6" maxlength="32" class="form-control input-lg" placeholder="Enter New Password Again">
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg modify-button responsive-button">Modify</button>
                    <button type="reset" class="btn btn-default btn-lg reset-button responsive-button">Reset</button>    
                </div>
            </form>

        </div>

    </div>

<% include partials/footer %>