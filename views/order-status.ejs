<% include partials/header %>


        <% include partials/admin-navigation %>

            
        <div class="table-responsive">
    
            <table class='table table-striped table-condensed'>
    
            <tr>
                <th> Username </th>
                <th> Order ID </th>
                <th> Date </th>
                <th> Total </th>  
                <th> Status </th>
                <th>Change Status</th>
            </tr>
    
            <% if(orders && orders.length > 0){%>
                <% orders.forEach(function(current){ %>
                    <tr>
                        <td><%= current.username%></td>
                        <td><span class="order-id"><%= current.order_id %></span></td>
                        <td><%= moment(current.orderedAt).format('Do MMMM YYYY hh:mm:ss a');%></td>
                        <td><%= current.total%></td>
                        <td><%= current.status%></td>
                        <td>
                            <button class='icon' onclick='editOrder()'><i class="fa fa-pencil"></i></button>
                        </td>
                    </tr>
                <% });%>
            <% } %>
            </table>
    
        </div>

<% include partials/footer%>