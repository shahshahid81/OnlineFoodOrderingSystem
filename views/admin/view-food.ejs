<% include ../partials/header %>

<% include ../partials/admin-navigation %>

<div class='admin-main'>

    <% include ../partials/_messages %>

    <div class="table-responsive">

        <table class='table table-striped table-condensed'>
        
            <th> Food ID </th>
            <th> Name </th>
            <th> Category </th>
            <th> Price </th>
            <th> Edit </th>
            <th> Delete </th>

            <% if(food && food.length > 0){%>
                <% food.forEach(function(current){ %>
                    <tr>
                        <td><%= current._id %></td>
                        <td><%= current.Name%></td>
                        <td><%= current.Category%></td>
                        <td><%= current.Price%></td>
                        <td>
                            <form action='/admin/food/<%=current._id%>/modify%>' method='get'>
                                <button class='icon' onclick='validateAction()'> <i class="fa fa-pencil"></i> </button>
                            </form>
                        </td>
                        <td>
                            <form action='/admin/food/<%=current._id%>/delete%>' method='post'>
                                <button class='icon' onclick="validateAction()"> <i class="fa fa-trash"></i> </button>
                            </form>
                        </td>
                    </tr>

                <% });%>
            <% } %>

        </table>

    </div>

</div>

<% include ../partials/footer%>
