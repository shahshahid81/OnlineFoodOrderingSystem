<% include ../partials/header %>
<div class="hold-transition skin-blue sidebar-mini">
    <%include ../partials/admin-header%>   
    <div class="wrapper">
    <%include ../partials/admin-sidebar%>                   
        <div class="content-wrapper">
            <section class="content container-fluid">
                <div class="table-responsive">
                    <table id="order-table" class='table table-striped table-condensed'>
                        <thead>
                        <tr>
                            <th> Username </th>
                            <th> Order ID </th>
                            <th> Date </th>
                            <th> Total </th>  
                            <th> Status </th>
                            <th>Change Status</th>
                        </tr>
                        </thead>    
                        <tbody>
                            <% if(orders && orders.length > 0){%>
                                <% orders.forEach(function(current){ %>
                                    <tr>
                                        <td><%= current.username%></td>
                                        <td><span class="order-id"><%= current.order_id %></span></td>
                                        <td><%= moment(current.orderedAt).format('Do MMMM YYYY hh:mm:ss a');%></td>
                                        <td><%= current.total%></td>
                                        <td><%= current.status%></td>
                                        <td>
                                            <button class='icon' onclick='editOrder()'><i class="fa fa-pencil"></i></button>
                                        </td>
                                    </tr>
                                <% });%>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>
<% include ../partials/footer %>