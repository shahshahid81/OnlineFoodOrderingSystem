<div id="food-items">

    <% Foods.forEach(function(food,index){ %>
        <% if((index%4) === 0){%>
            <div class="row">
        <% } %>

            <div class="col-md-3">
                <div class="row Item">
                    <div class="thumbnail">
                        <img src="<%= food.ImagePath %>" alt="<%= food.Name %>" class="img-thumbnail img-responsive">
                        <div class="caption">
                            <p class="Title"><strong> <%= food.Name %> </strong></p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p class="Description"> <%= food.Description %> </p>
                        <p class="Price"> <strong> &nbsp <%= food.Price %> &#8360  </strong>  </p>
                        <button class="btn btn-primary add-to-cart">Add to Cart</button>
                        <button class="btn btn-success order-online">Order Online</button> 
                    </div>
                </div>
            </div>

        <% if((((index+1)%4) === 0)&& index !== 0){%>
            </div>
        <% } %>
    <% }); %>

</div>