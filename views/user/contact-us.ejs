<% include ../partials/header%>

<% include ../partials/navigation%>

    <div class="container">
    <% include ../partials/_messages%>
        <form class="contact-us-form responsive-form" method="post" action="/contactus">
            <div class="form-group">
                <label for="name">Name</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="text" name="name" id="name" class="form-control input-lg" placeholder="Enter Name" required>
                </div>
            </div>
            <div class="form-group">
                <label for="phone-number">Phone Number</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-mobile"></i></span>
                    <input type="text" name="phone-number" id="phone-number" class="form-control input-lg" placeholder="Enter Phone Number" required>
                </div>
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Enter Email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-comments"></i></span>
                    <textarea name="message" id="message" cols="30" rows="3" class="form-control input-lg" placeholder="Enter Message"></textarea>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg submit-button responsive-button" onclick="validateContactUs()">Submit</button>
                <button type="reset" class="btn btn-default btn-lg clear-button responsive-button">Clear</button>    
            </div>
        </form>
    </div>

<% include ../partials/footer%>