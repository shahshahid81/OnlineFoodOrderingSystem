<% include ../partials/header%>

<% include ../partials/navigation%>

<div class='container'>
    
    <% include ../partials/_messages%>

    <div class = 'table-responsive'>
        <table id="order-table" class='table table-striped table-condensed'>
        <thead>
        <tr>
            <th> Order ID </th>
            <th> Date </th>
            <th> Total </th>  
            <th> Status </th>
        </tr>
        </thead>
        <tbody>
        <% orderArr.forEach(function(current){ %>

            <tr>
                <td> <a href="/order/<%=current.orders.order_id%>"><%= current.orders.order_id %> </a></td>
                <td> <%= moment(current.orders.orderedAt).format('Do MMMM YYYY hh:mm:ss a');%> </td>
                <td> <%= current.orders.grandTotal %> </td>
                <td>
                    <% switch(current.orders.status) { 
                        case 'Pending': %>
                            <span class="label label-info"> Pending </span>
                    <%        break; 
                     case 'Accepted': %>
                            <span class="label label-primary"> Accepted </span>
                    <%        break; 
                        case 'Rejected': %>
                            <span class="label label-danger"> Rejected </span>
                    <%        break; 
                     case 'Dispatched': %>
                            <span class="label label-warning"> Dispatched </span>
                    <%        break; 
                      case 'Delivered': %>
                            <span class="label label-success"> Delivered </span>
                    <%        break;
                 } %>
                </td>
            </tr>

        <% });%>
        </tbody>        
        </table>
        </div>
        
        </div>
        
<% include ../partials/footer%>
        
