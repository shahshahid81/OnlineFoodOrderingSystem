<% include partials/header %>

<% include partials/navigation %>

<div class="container">

<% include partials/_messages %>

    <%items.forEach(function(current){ %>
        <div class="row cart-item">
                    
            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="<%= current.item.ImagePath %>" class="food-image" alt="<%= current.item.Name %>">
                </div>
            </div>
            <div class="col-md-6">
                <h3 class='food-name'> <%= current.item.Name %> </h3>
                <p class="description"> <%= current.item.Description %>  </p>
            </div>
            <div class="col-md-3">
                <br>
                <br>
                <p>
                <span class='food-price'> <%= current.item.Price %> </span> &#8360 &nbsp; x &nbsp;&nbsp;&nbsp; <%= current.quantity%>
                </p>  
                <hr>
                <p> Total = <span class="total-price" data-price="<%= current.item.Price %>"><%= parseInt(current.item.Price) * parseInt(current.quantity) %></span></p>
            </div>

        </div>
    <% });%>

</div>


<% include partials/footer %>
